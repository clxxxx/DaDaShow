<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xzry.takeshow.ui.mine.CollectActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_h">
        <ImageView
            android:id="@+id/collect_back"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/backarrow"
            android:layout_centerVertical="true"/>
        <android.support.design.widget.TabLayout
            android:id="@+id/collect_tablayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/theme_dark_color"
            app:tabTextColor="@color/little_title_color_333333" />
        <ImageView
            android:id="@+id/collect_more"
            android:layout_width="@dimen/dp_44"
            android:layout_height="wrap_content" 
            android:src="@mipmap/ico_more2"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View style="@style/long_line_horizontall"/>
    <FrameLayout
        android:id="@+id/collect_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
