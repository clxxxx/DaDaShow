<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/transparent"
    android:layout_alignParentBottom="true">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabbar_h"
        android:background="@mipmap/tabbar_bg"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:id="@+id/main_button_btn1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tabbar_h"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView

                android:id="@+id/home_btn_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/radiobutton_bg_select1"/>
            <TextView
                style="@style/tablebar_text_style"
                android:text="搭搭"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_button_btn2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tabbar_h"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/radiobutton_bg_select2"/>
            <TextView
                style="@style/tablebar_text_style"
                android:text="时尚圈"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_button_btn3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/main_button_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/fitroom" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_button_btn4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tabbar_h"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/radiobutton_bg_select4"/>
            <TextView
                style="@style/tablebar_text_style"
                android:text="购物车"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_button_btn5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tabbar_h"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/radiobutton_bg_select5"/>
            <TextView
                style="@style/tablebar_text_style"
                android:text="我的"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>