<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="105dp">
    <CheckBox
        android:id="@+id/goods_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:button="@null"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/foot_check_bg"/>
    <com.sxjs.common.widget.imageview.ExpandImageView
        android:id="@+id/goods_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@+id/goods_check"
        android:layout_marginLeft="18dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/goods_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/goods_img"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"/>
    <TextView
        android:id="@+id/goods_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/goods_img"
        android:layout_marginLeft="18dp"
        android:text="¥"
        android:textSize="16sp"
        android:textColor="@color/theme_dark_color"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/goods_new_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/goods_symbol"
        android:layout_marginLeft="5dp"
        android:hint="88"
        android:textSize="16sp"
        android:textColor="@color/theme_dark_color"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/goods_symbol2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/goods_img"
        android:layout_marginLeft="61dp"
        android:hint="¥"
        android:textSize="12sp"
        android:textColor="@color/text_color_999999"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/goods_old_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/goods_symbol2"
        android:hint="88"
        android:textSize="12sp"
        android:textColor="@color/text_color_999999"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>