<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center"
    android:paddingLeft="@dimen/home_pading"
    android:paddingRight="@dimen/home_pading">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mi_in_title"
            style="@style/mine_integral_recyclerview_text1"
            android:hint="购物获得积分"/>
        <TextView
            android:id="@+id/mi_in_integral_up"
            style="@style/mine_integral_recyclerview_text1"
            android:hint="+150"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp">
        <TextView
            android:id="@+id/mi_in_text1"
            style="@style/mine_integral_recyclerview_text2"
            android:hint="订单号："/>
        <TextView
            android:id="@+id/mi_in_order_id"
            style="@style/mine_integral_recyclerview_text2"
            android:layout_toRightOf="@+id/mi_in_text1"
            android:layout_marginLeft="@dimen/dp_5"
            android:hint="1000" />
        <TextView
            android:id="@+id/mi_in_day"
            style="@style/mine_integral_recyclerview_text2"
            android:layout_toLeftOf="@+id/mi_in_data"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="10dp"
            android:hint="昨天" />
        <TextView
            android:id="@+id/mi_in_data"
            style="@style/mine_integral_recyclerview_text2"
            android:hint="14:15:15"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</LinearLayout>