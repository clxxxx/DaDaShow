<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <com.xzry.takeshow.ui.integralshop.DisInterceptNestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_h"
            android:orientation="horizontal">
            <android.support.design.widget.TabLayout
                android:id="@+id/shop_tabs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:tabSelectedTextColor="@color/theme_dark_color"
                app:tabTextColor="@color/little_title_color_333333"
                app:tabMode="scrollable" />
            <LinearLayout
                android:id="@+id/shop_inte_unfold"
                android:layout_width="@dimen/title_h"
                android:layout_height="@dimen/title_h"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ico_top"/>
            </LinearLayout>
        </LinearLayout>

    </com.xzry.takeshow.ui.integralshop.DisInterceptNestedScrollView>

    <com.xzry.takeshow.widget.NoScrollViewPager
        android:id="@+id/shop_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />



