<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.xzry.takeshow.widget.TitleBarView
        android:id="@+id/after_sale_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/activity_bg_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/commodity_img"
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:scaleType="centerCrop"
                    android:background="@color/theme_light_color"
                    android:layout_gravity="center_vertical"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:id="@+id/commodity_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_toLeftOf="@+id/price"
                        android:lines="2"
                        android:ellipsize="end"
                        android:text="乐町2017夏季新款女装绿色短款刺绣宽松短袖T恤女夏韩版纯色上衣"
                        android:textColor="@color/little_title_color"/>

                    <LinearLayout
                        android:id="@+id/specification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/commodity_name"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:layout_alignParentBottom="true"
                            android:text="颜色:"
                            android:textColor="@color/text_color_2"/>

                        <TextView
                            android:id="@+id/commodity_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:layout_marginLeft="5dp"
                            android:layout_alignParentBottom="true"
                            android:text="黑色;"
                            android:textColor="@color/text_color_2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:layout_marginLeft="15dp"
                            android:layout_alignParentBottom="true"
                            android:text="尺码:"
                            android:textColor="@color/text_color_2"/>

                        <TextView
                            android:id="@+id/commodity_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:layout_marginLeft="5dp"
                            android:layout_alignParentBottom="true"
                            android:text="M"
                            android:textColor="@color/text_color_2"/>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/activity_bg_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/little_title_color"
                android:text="售后类型"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"/>

            <com.sxjs.common.widget.percentlayout.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    app:layout_widthPercent="30%"
                    android:layout_height="40dp"
                    android:text="退货退款"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@drawable/main_color_btn_bg_shape2"/>

                <TextView
                    android:layout_width="0dp"
                    app:layout_widthPercent="30%"
                    android:layout_height="40dp"
                    android:text="换货"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/text_color_2"
                    android:textSize="14sp"
                    android:background="@drawable/border_btn_bg_shape2"/>

                <TextView
                    android:layout_width="0dp"
                    app:layout_widthPercent="30%"
                    android:layout_height="40dp"
                    android:text="仅退款"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@drawable/main_color_btn_bg_shape2"/>
            </com.sxjs.common.widget.percentlayout.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/activity_bg_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/little_title_color"
                    android:text="数量"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/theme_dark_color"
                    android:text="*"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/theme_dark_color"
                    android:text="2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/little_title_color"
                    android:text="金额"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="3dp"
                    android:textColor="@color/theme_dark_color"
                    android:text="￥180.00"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_color_4"
                    android:text="积分商品，退货时积分不退"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/activity_bg_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/little_title_color"
                    android:text="选择售后原因"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/theme_dark_color"
                    android:text="*"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/theme_dark_color"
                    android:text="必填"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/more"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/activity_bg_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="问题描述"
                    android:textColor="@color/little_title_color"
                    android:textSize="14sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:layout_marginTop="15dp"
                    android:padding="10dp"
                    android:lineSpacingExtra="3dp"
                    android:background="@color/activity_bg_color"
                    android:gravity="top|left"
                    android:textSize="13sp"
                    android:hint="请输入您的问题描述，不少于10个字"
                    android:textColor="@color/little_title_color"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/activity_bg_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传凭证（最多4张）"
                    android:textColor="@color/little_title_color"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/theme_dark_color"
                    android:text="必填"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/problem_photo_recyclerView"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:background="@color/white"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/activity_bg_color"/>

        </LinearLayout>

    </ScrollView>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textSize="14sp"
        android:gravity="center"
        android:background="@color/theme_dark_color"
        android:textColor="@color/white"
        android:text="提交"/>


</LinearLayout>