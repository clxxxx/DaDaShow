<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/activity_bg"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true"
    tools:context="com.xzry.takeshow.ui.mine.NickNameEditActivity">
    <com.xzry.takeshow.widget.TitleBarView
        android:id="@+id/titlebar_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/setting_personal_data"
        android:layout_below="@+id/titlebar_view"
        style="@style/mine_setting_lin"
        android:layout_marginTop="@dimen/dp_10">
        <EditText
            android:id="@+id/nickname_edit"
            android:layout_width="match_parent"
            style="@style/mine_setting_text"
            android:background="@null"/>
        <ImageView
            android:id="@+id/nickname_clear"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="@dimen/dp_8"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/close"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/nickname_confirm"
        style="@style/common_button_48"
        android:layout_marginTop="@dimen/dp_44"
        android:text="保存"/>
</LinearLayout>
