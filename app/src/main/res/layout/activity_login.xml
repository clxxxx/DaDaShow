<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:psd="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    android:focusableInTouchMode="true"
    tools:context="com.xzry.takeshow.ui.login.LoginActivity">

    <ImageView
        android:id="@+id/login_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ico_close_page"
        android:padding="@dimen/dp_20"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_75"
        android:layout_above="@+id/login_content"/>
    <LinearLayout
        android:id="@+id/login_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:background="@drawable/border_circle"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51"

            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86"
                android:paddingLeft="@dimen/sp_10"
                android:paddingRight="@dimen/sp_10"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/title_color"/>

            <com.xzry.takeshow.widget.PhoneEditText
                android:id="@+id/login_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="手机号码"
                android:textColorHint="@color/text_color_666666"
                android:textSize="@dimen/sp_16"
                android:maxLines="1"
                android:maxLength="13"

                android:textColor="@color/title_color"/>
            <ImageView
                android:id="@+id/account_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_delete_txt"
                android:padding="@dimen/dp_10"
                android:visibility="gone"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_dark_color"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_41">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <com.xzry.takeshow.widget.CodeFrame
                    android:id="@+id/code_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <View style="@style/long_line_vertical"/>

                <TextView
                    android:id="@+id/login_getcode"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textSize="@dimen/sp_11"
                    android:textColor="@color/color_orange_red"/>
             </LinearLayout>

        </FrameLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/login_join"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_h"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"
        android:text="进入搭搭秀"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        android:background="@drawable/item_login_button"
        android:layout_below="@+id/login_content"
        android:layout_marginTop="@dimen/dp_45"/>
    <ImageView
        android:id="@+id/login_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_join"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@mipmap/or"/>
    <ImageView
        android:id="@+id/login_threed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_or"
        android:layout_marginTop="@dimen/dp_50"
        android:padding="@dimen/dp_5"
        android:background="@mipmap/ico_wechat"/>
</RelativeLayout>
