<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/dialog_white_bg_shape"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:text="为保证您正常、安全地使用搭搭秀，需要获取您的电话使用权限，请允许。"
        android:textColor="@color/little_title_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_dark_color"/>

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/theme_dark_color"
        android:gravity="center"
        android:paddingTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="去允许"
        android:textSize="14sp"/>

</LinearLayout>