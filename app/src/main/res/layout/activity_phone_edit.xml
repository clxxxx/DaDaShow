<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xzry.takeshow.ui.mine.PhoneEditActivity">
    <com.xzry.takeshow.widget.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/setting_security_center"
        android:layout_below="@+id/setting_personal_data"
        style="@style/mine_setting_lin"
        android:layout_marginTop="10dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="@null"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_color_aaaaaa"
            android:layout_centerVertical="true"
            android:hint="安全中心" />
    </RelativeLayout>
    <View style="@style/long_line_horizontall"/>
    <LinearLayout
        android:layout_below="@+id/setting_personal_data"
        style="@style/mine_setting_lin"
        android:gravity="center_vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_color_aaaaaa"
            android:layout_centerVertical="true"
            android:hint="验证码" />
        <View style="@style/long_line_vertical"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"/>
        <TextView
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:text="获取验证码"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/theme_dark_color"/>
     </LinearLayout>
    <TextView
        android:id="@+id/nickname_confirm"
        style="@style/common_button_48"
        android:layout_marginTop="@dimen/dp_44"
        android:text="保存"/>
</LinearLayout>
