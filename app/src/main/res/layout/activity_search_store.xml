<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:src="@mipmap/back_arrow"
            android:scaleType="center"/>

        <LinearLayout
            android:id="@+id/home_search_lay"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:background="@drawable/home_title_bar_search_corner_bg">
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_seach"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/home_search_text"
                android:layout_marginLeft="3dp"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:textColor="@color/text_color_3"
                android:textSize="13sp"
                android:lines="1"
                android:ellipsize="end"
                android:text="连衣裙" />
            <ImageView
                android:layout_marginRight="15dp"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@mipmap/ioc_remove"/>
        </LinearLayout>

        <ImageView
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ico_more2"
            android:scaleType="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/main_color_text_selected"
                android:text="综合"/>

            <View
                android:layout_width="35dp"
                android:layout_gravity="center"
                android:layout_height="2dp"
                android:background="@color/main_color_line_selected"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/main_color_text_selected"
                android:text="附近"/>

            <TextView
                android:layout_width="35dp"
                android:layout_gravity="center"
                android:layout_height="2dp"
                android:background="@color/main_color_line_selected"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>