<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal">

        <com.sxjs.common.widget.imageview.ExpandImageView
            android:id="@+id/brand_log"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:padding="1px"
            android:background="@drawable/border_line"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/brand_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/title_color"/>

            <TextView
                android:id="@+id/brand_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="9dp"
                android:lines="2"
                android:ellipsize="end"
                android:textColor="@color/text_color_1"/>
        </LinearLayout>
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_dark_color"/>

    <com.sxjs.common.widget.percentlayout.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_aspectRatio="100%"
            app:layout_widthPercent="31%">

            <com.sxjs.common.widget.imageview.ExpandImageView
                android:id="@+id/goods_img1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/img_bg"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/goods_price1"
                style="@style/home_brand_stores_price_tx"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="31%"
            app:layout_marginLeftPercentX="3.5%"
            app:layout_marginRightPercentX="3.5%"
            app:layout_aspectRatio="100%">
            <com.sxjs.common.widget.imageview.ExpandImageView
                android:id="@+id/goods_img2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/img_bg"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/goods_price2"
                style="@style/home_brand_stores_price_tx"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="31%"
            app:layout_aspectRatio="100%">
            <com.sxjs.common.widget.imageview.ExpandImageView
                android:id="@+id/goods_img3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/img_bg"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/goods_price3"
                style="@style/home_brand_stores_price_tx"/>
        </RelativeLayout>
    </com.sxjs.common.widget.percentlayout.PercentLinearLayout>



</LinearLayout>