<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/little_title_color"
            android:text="选择自提时间"
            android:textSize="14sp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ico_close_page"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_light_color"/>

    <LinearLayout
        android:id="@+id/payment_weixin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wechat_icon"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/little_title_color"
            android:text="微信支付"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/text_color_2"
            android:text="推荐安装微信5.0及以上版本的用户使用"
            android:textSize="10sp"
            android:layout_marginLeft="15dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/select_selected"
            android:scaleType="centerCrop"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_light_color"/>

    <LinearLayout
        android:id="@+id/payment_alipay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/alipay_icon"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/little_title_color"
            android:text="支付宝支付"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/text_color_2"
            android:text="推荐有支付宝账户的用户使用"
            android:textSize="10sp"
            android:layout_marginLeft="15dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/select_selected"
            android:scaleType="centerCrop"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/text_color_2"
            android:text="请在24小时内容完成支付"
            android:textSize="12sp"
            android:gravity="right"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/money_tv"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:textColor="@color/theme_dark_color"
            android:text="金额  ¥178.00"
            android:textSize="12sp"
            android:layout_marginLeft="15dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/affirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textColor="@color/white"
        android:background="@mipmap/bottom_bg"
        android:gravity="center"
        android:text="前往支付"
        android:textSize="15sp"/>

</LinearLayout>