<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true"
    tools:context="com.xzry.takeshow.ui.mine.JoinDaDaActivity">

    <com.xzry.takeshow.widget.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/activity_bg_color"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:gravity="center_vertical"
        android:text="品牌认证申请信息"
        android:textColor="@color/text_color_999999"
        android:textSize="@dimen/sp_14"
        android:background="@color/activity_bg_color"
        android:paddingLeft="@dimen/home_pading"
        android:paddingRight="@dimen/home_pading"/>
    <LinearLayout
        style="@style/join_dada_lay">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/theme_dark_color"/>
        <EditText
            android:hint="品牌名称"
            android:layout_marginLeft="5dp"
            style="@style/join_dada_edittext"/>
    </LinearLayout>
    <View
        style="@style/long_line_horizontall"/>
    <LinearLayout
        style="@style/join_dada_lay">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/theme_dark_color"/>
        <EditText
            android:hint="品牌官网/店铺链接"
            android:layout_marginLeft="5dp"
            style="@style/join_dada_edittext"/>
    </LinearLayout>
    <View
        style="@style/long_line_horizontall"/>
    <LinearLayout
        style="@style/join_dada_lay">
        <EditText
            android:hint="新浪微博昵称"
            android:layout_marginLeft="12dp"
            style="@style/join_dada_edittext"/>
    </LinearLayout>
    <View
        style="@style/long_line_horizontall"/>
    <LinearLayout
        style="@style/join_dada_lay">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/theme_dark_color"/>
        <EditText
            android:hint="手机号"
            android:layout_marginLeft="5dp"
            style="@style/join_dada_edittext"/>
    </LinearLayout>
    <View
        style="@style/long_line_horizontall"/>
    <LinearLayout
        style="@style/join_dada_lay">
        <EditText
            android:hint="微信号"
            android:layout_marginLeft="12dp"
            style="@style/join_dada_edittext"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:gravity="center_vertical"
        android:text="线上/线下店铺，商品等图片(至少三张)"
        android:textColor="@color/little_title_color_333333"
        android:textSize="@dimen/sp_14"
        android:background="@color/activity_bg_color"
        android:paddingLeft="@dimen/home_pading"
        android:paddingRight="@dimen/home_pading"/>
    <!--显示图片-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/join_add_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/activity_bg_color"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:overScrollMode="never" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:text="提交"
        android:background="@color/line_dark_color"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/white"/>
    
</LinearLayout>
