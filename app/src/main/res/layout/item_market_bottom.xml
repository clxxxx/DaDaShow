<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <TextView
        android:id="@+id/market_bottom_dist"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="@color/little_title_color_333333"/>
    <View style="@style/long_line_horizontall"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
            android:id="@+id/market_bottom_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/little_title_color_333333"/>
        <TextView
            android:id="@+id/market_bottom_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="@color/little_title_color_333333"/>
        <TextView
            android:id="@+id/market_bottom_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="7dp"
            android:textSize="12sp"
            android:textColor="@color/text_color_999999"/>

    </LinearLayout>
    <View style="@style/long_line_horizontall"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <TextView
        android:id="@+id/market_bottom_store_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="@color/little_title_color_333333"/>
    <View style="@style/long_line_horizontall"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <TextView
        android:id="@+id/market_bottom_mobile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="16sp"
        android:textColor="@color/theme_dark_color"/>
    <TextView
        android:id="@+id/market_bottom_go"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:text="前往"
        android:background="@color/theme_dark_color"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/white"/>
</LinearLayout>