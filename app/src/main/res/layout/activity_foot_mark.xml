<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xzry.takeshow.ui.mine.FootMarkActivity">
    <com.xzry.takeshow.widget.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/activity_bg_color"/>
    <RelativeLayout
        android:id="@+id/foot_layout_botton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:visibility="gone">
        <CheckBox
            android:id="@+id/foot_allSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:button="@null"
            android:background="@drawable/foot_check_bg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="全选"
            android:layout_toRightOf="@+id/foot_allSelect"/>
        <TextView
            android:id="@+id/foot_delete"
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:text="删除"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:background="@color/theme_dark_color"/>
    </RelativeLayout>
</LinearLayout>
